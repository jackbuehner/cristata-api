{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@cristata/server": ["apps/server"],
      "@cristata/tiptap": ["packages/tiptap"],
      "@cristata/utils": ["packages/utils"]
    }
  },
  "lib": ["es2015"]
}
