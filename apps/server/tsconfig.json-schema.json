{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "strict": true
  },
  "lib": ["es2015"],
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["src/**/*.test.ts"]
}
