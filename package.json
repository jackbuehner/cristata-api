{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "changeset": "changeset",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "eslint": "^8.23.0",
    "eslint-plugin-turbo": "^0.0.3",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "dependencies": {
    "@changesets/cli": "^2.24.4"
  }
}
